<section class="item-cards">
  <section class="item-card">
    <section class="merchant-show-card">
    <h2><%= link_to "#{@merchant.name}", "/merchants/#{@merchant.id}" %></h2>
    <h2><%= link_to "Items", "/merchants/#{@merchant.id}/items" %></h2>

    <p>Address: <%= @merchant.address %></p>
    <p>City: <%= @merchant.city %></p>
    <p>State: <%= @merchant.state %></p>
    <p>Zip: <%= @merchant.zip %></p>

    <%= link_to 'Edit', "/merchants/#{@merchant.id}/edit" %>
    <%= button_to 'Delete', "/merchants/#{@merchant.id}", method: :delete, class: :button %>
    </section>
  </section>
</section>
