
<section class="item-cards">
  <section class="item-card">
    <%= image_tag("#{@item.image}") %>
    <h3><%= link_to "#{@item.name}", "/items/#{@item.id}" %></h3>

    <p>Description: <%= @item.description %></p>
    <p>Price: $<%= @item.price %></p>
    <p>Status: <%= @item.status %></p>
    <p>Inventory: <%= @item.inventory %></p>
    <p>Merchant: <%= link_to "#{@item.merchant.name}", "/merchants/#{@item.merchant.id}" %></p>

    <%= link_to 'Edit', "/items/#{@item.id}/edit" %>
    <%= button_to 'Delete', "/items/#{@item.id}", method: :delete %>
  </section>
</section>
